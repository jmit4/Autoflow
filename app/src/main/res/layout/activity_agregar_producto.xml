<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context=".AgregarProducto">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:scaleX="4"
        android:src="@drawable/headerbkg3" />

    <TextView
        android:id="@+id/tVTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="37dp"
        android:textColor="@color/black"
        android:text="Añadir producto"
        android:textStyle="bold"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tVInst2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa el nombre del producto:"
        android:layout_marginStart="20dp"
        android:layout_marginTop="164dp"
        android:textSize="20sp"

        android:layout_below="@+id/tVTitulo"

        />
    <EditText
        android:id="@+id/eTxtNombreP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:hint="Nombre"
        android:layout_below="@id/tVInst2"

        />




    <TextView
        android:id="@+id/tVInst1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="Ingresa la cantidad del producto:"
        android:textSize="20sp"
        android:layout_below="@id/eTxtNombreP" />

    <EditText
        android:id="@+id/eTxtNCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ejem: 5 "
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/tVInst1"
        />
    <EditText
        android:id="@+id/eTxtProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:hint="Escanea el código "
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/eTxtNCantidad"
        android:focusable="false"
        android:clickable="false" />



    <EditText
        android:id="@+id/precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Precio:"
        android:inputType="number"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_below="@id/eTxtProducto"
        />





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/imgbtnScaner"
        android:text="Capturar"
        android:background="@drawable/corners"
        android:layout_marginTop="53dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:layout_below="@+id/precio" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/imgbtnSave"
        android:text="Guardar"
        android:background="@drawable/corners"
        android:layout_marginTop="53dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="233dp"
        android:layout_marginEnd="33dp"
        android:layout_below="@+id/precio" />




</RelativeLayout>