<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:scaleX="4"

        android:src="@drawable/headerbkg3"/>


    <TextView
        android:id="@+id/tureporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu reporte diario"
        android:textStyle="bold"
        android:textSize="34sp"
        android:textColor="@color/black"
        android:layout_marginStart="80dp"
        android:layout_marginTop="60dp"
         />

    <TextView
        android:id="@+id/tVTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asi se ve tu semana: "
        android:textSize="34sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="140dp"
        android:layout_below="@+id/tureporte" />

    <TextView
        android:id="@+id/tVTitulo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asi se ve tu semana: "
        android:textSize="34sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="140dp"
        android:layout_below="@+id/tureporte" />


    <TextView
        android:id="@+id/edLista"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:text=""
        android:textSize="24sp"
        android:background="@drawable/styletextview"
        android:layout_marginStart="18dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/tVTitulo2"
        android:maxLines="8"
        android:ellipsize="end"
        android:padding="16dp" /> <!-- AÃ±adir padding para evitar que el texto toque los bordes -->







</RelativeLayout>